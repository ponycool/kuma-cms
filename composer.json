{
  "name": "ponycool/kumacms",
  "description": "基于Codeigniter4和React的快速建站系统",
  "license": "MIT",
  "type": "project",
  "homepage": "https://codeigniter.com",
  "support": {
    "forum": "https://forum.codeigniter.com/",
    "source": "https://github.com/ponycool/kuma-cms",
    "slack": "https://codeigniterchat.slack.com"
  },
  "require": {
    "php": "^8.1",
    "codeigniter4/framework": "^4.0",
    "nesbot/carbon": "^2.71",
    "ponycool/ponycool-library": "^1.0",
    "ramsey/uuid": "^4.7",
    "twig/twig": "^3.8",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "fakerphp/faker": "^1.9",
    "mikey179/vfsstream": "^1.6",
    "phpunit/phpunit": "^9.1"
  },
  "autoload": {
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit"
  }
}
